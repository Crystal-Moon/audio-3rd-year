<div class="back" style="background-image: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.8) 100%),url('./img/album_{{album_cover}}.jpg');"></div>
	  <div class="artist gradiant">
	  	<h2>Lesson {{lesson}}</h2>
	  	<div class="head sticky" id="head_sticky">
	  		<button type="button" class="btn green to-pdf_view" data-link="{{pdf.link}}" data-download="{{pdf.linkDownload}}" data-vista="pdf_view">PDF</button>
	  		<div class="row">
	  			<span class="w10 head-lbl">Pag.</span>
	  			<span class="w65 head-lbl">Exercise</span>
	  			<span class="w10 head-lbl"></span>
	  		</div>
	  	</div> 
	  		<ul>
	  		{{#each audios}}
	  			<li class="row to-play" data-exc="{{exc}}" data-lesson="{{lesson}}" data-link="{{link}}" data-cover="{{cover}}"><span class="w10 to-playspan">{{pag}}</span><span class="w50 to-playspan">{{type}} - {{exc}} 
	  			</span><span class="w25"><span class="num_cd">{{num}}</span><span class="sound_n">{{sound_n}}</span></span><span class="menu_point"></span><a href="{{link}}" target="_blank" class="desplegable hidden"><span></span>Descargar</a></li>
			{{/each}}
	  		</ul>
	  		<div class="btn w_b read" onclick="readDialoges('{{album_cover}}','{{lesson}}')">Read Dialoges</div>
	  </div>